<p id="notice"><%= notice %></p>

<h1>Listing Systems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Economy</th>
      <th>Government</th>
      <th>Allegiance</th>
      <th>Blackmarket</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.name %></td>
        <td><%= system.economy %></td>
        <td><%= system.government %></td>
        <td><%= system.allegiance %></td>
        <td><%= system.blackmarket %></td>
        <td><%= system.notes %></td>
        <td><%= link_to 'Show', system %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

